<% include ../partials/header %>
    <header class="default-header">
        <div class="sticky-header" >
            <div class="container">
                <div class="header-content d-flex justify-content-between align-items-center">
                    <div class="logo">
                        <a href="#top" class="smooth"><img src="" alt=""></a>
                    </div>
                    <div class="right-bar d-flex align-items-center">
                        <nav class="d-flex align-items-center">
                            <ul class="main-menu">
                                    <a href="/pakar/new">Tambah Kasus Baru</a>
                                    <a href="/pakar/show">Lihat Semua Kasus</a>   
                                    <a href="/logout">Keluar</a> 
                            </ul>
                            <a href="#" class="mobile-btn"><span class="lnr lnr-menu"></span></a>
                        </nav>
                        
                        
                    </div>
                </div>
            </div>
        </div>
    </header>
    

<!-- Start Contact Area -->
<section id="contact" class="section-full gray-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="product-area-title text-center">
                    <p class="text-uppercase">Sistem Pakar</p>
                    <h2 class="h1">Tambahkan Kasus Baru</h2>
                </div>
            </div>
        </div>
        <div class="row">
            
            <div class="col-lg-12 mt-30">
                <%= typeof msg != 'undefined' ? msg : '' %>
                <form action="/pakar2" method="POST" class="contact-form" enctype="multipart/form-data">
                    <div class="single-input color-2 mb-10">
                        <input type="text" name="ciri" placeholder="Ciri-ciri Kecacatan" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Ciri - ciri Kecacatan'" required>
                    </div>
                    <div class="single-input color-2 mb-10">
                        <input type="text" name="jenis" placeholder="Jenis Kecacatan" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Jenis Kecacatan'" required>
                    </div>
                    <div class="single-input color-2 mb-10">
                        <input type="text" name="berlangsung" placeholder="Berlangsung Pada" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Berlangsung Pada'" required>
                    </div>
                    <div class="single-input color-2 mb-10">
                        <input type="text" name="penyebab" placeholder="Penyebab Kecacatan" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Penyebab Kecacatan'" required>
                    </div>
                    
                    <select class="single-input color-2 mb-10 form-control" name="tingkat" placeholder="Tingkat Kecacatan" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Tingkat Kecacatan'" required>
                        <option value="" disabled selected placeholder="Tingkat Kecacatan" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Tingkat Kecacatan'">Pilih Tingkat Kecacatan</option>
                        <option value="dominan">Dominan</option>
                        <option value="tidakdominan">Tidak Dominan</option>
                    </select>
                   
                    <div class="single-input color-2 mb-10">
                        <input type="file" name="image" placeholder="Tambahkan Gambar" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Tambahkan Gambar'" required>
                    </div>

                    
                    <div class="d-flex justify-content-end"><button class="mt-10 primary-btn d-inline-flex text-uppercase align-items-center">Tambahkan<span class="lnr lnr-arrow-right"></span></button></div>
                    <div class="alert"></div>
                </form>
            </div>
        </div>
    </div>
</section>



<% include ../partials/footer %>